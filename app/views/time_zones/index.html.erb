<h1>Listing time_zones</h1>

<table>
  <tr>
    <th>User</th>
    <th>Time zone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @time_zones.each do |time_zone| %>
  <tr>
    <td><%= time_zone.user_id %></td>
    <td><%= time_zone.time_zone %></td>
    <td><%= link_to 'Show', time_zone %></td>
    <td><%= link_to 'Edit', edit_time_zone_path(time_zone) %></td>
    <td><%= link_to 'Destroy', time_zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

