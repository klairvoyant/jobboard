<div class="row-fluid">
  <div class="span4">
    <%= simple_form_for(@personal_datum,:html => {:multipart => true}) do |f| %>
      <%= f.error_notification %>
                   <ul class="thumbnails">
                     <li class="span8">
                       <div class="thumbnail">
                         <%= image_tag (@personal_datum.photo.to_s) %>
                         <h2><%= current_user.first_name %></h2>
                       </div>
                     </li>
                   </ul>
                  <%= f.input :photo,:label=>false,:as=> :file %>

   </div>
  <div class="span4">
           <!--<%#= f.input :user_id %>-->
         <h4 align="left"> Update Profile</h4>

            <%= f.input :name,:label=>"User Name",:placeholder=>"User Name" %>
            <%= f.input :school,:label=>"School",:placeholder=>"School" %>
            <%= f.input :area_of_study,:label=>"Area of study",:placeholder=>"Area of Study" %>
            <%= f.input :email ,:label=>"email", :placeholder => 'email- user@domain.com' %>
            <%= f.input :phone,:label=>"Phone",:placeholder=>"Phone" %>
    </div>
  <div class="span4">
        <!--<div class="dashboard-video">-->
          <ul class="thumbnails">
            <li class="span12">
              <div class="thumbnail">
                <img src="http://placehold.it/300x200" alt="">
                <!--<h3>Thumbnail label</h3>-->
                <!--<p>Thumbnail caption...</p>-->
              </div>
            </li>
          </ul>
           <%= f.input :video,:as=> :file,:label=>false %>
        <!--</div>-->
      </div>
</div>
<div class="row-fluid">
  <div class="span1">

      </div>
  <div class="span9">

        <%= f.input :about_me, :input_html => { :col=>20,:rows => 5 }  %>
        <%= f.input :experience, :input_html => { :rows => 5 } %>

        <%= f.button :submit, 'Save',:class=> "btn btn-primary pull-right" %>


      </div>
  <div class="span2">
</div>
  <% end %>

   </div>
