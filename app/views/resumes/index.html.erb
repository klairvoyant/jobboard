<h1>Listing resumes</h1>

<table>
  <tr>
    <th>User</th>
    <th>Option no</th>
    <th>File name</th>
    <th>Type</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.user_id %></td>
    <td><%= resume.option_no %></td>
    <td><%= resume.file_name %></td>
    <td><%= resume.resume_type %></td>
    <td><%= resume.data %></td>
    <td><%= link_to 'Show', resume %></td>
    <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
    <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

