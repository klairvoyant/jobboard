<div class="row-fluid">
  <div class="span9">
        <h3>Post Your Resume</h3>
        <strong>Lets get started. Select one of these four options:</strong><br>
        <%= simple_form_for(@resume,:html => {:multipart => true} ) do |f| %>
           <p class="notice"><%= notice %></p>

           <%= f.collection_radio_buttons(:option_no, [['1', "Create Resume manually"]],:first, :last,:item_wrapper_tag=>'label',:item_wrapper_class=>'bigSize', :checked=> '1' ) do |b|
              b.label { b.radio_button + " " +  b.text }
            end %>
            <div class="gap1">
                Don't worry, we'll help along the way.
            </div>
             <div class="row-fluid">
                <div class="span6">
                  <%= f.collection_radio_buttons(:option_no, [['2', 'import my information from linkedin']],:first, :last,:item_wrapper_tag=>'label',:item_wrapper_class=>'bigSize' ) do |b|
                    b.label {
                      b.radio_button + " " + b.text
                    }
                  end %>
              </div>
                <div class="span6 bigSize">
                   <%=  link_to "In",linkedinconnect_linkedin_details_path,:class=>"btn btn-primary" %>
                </div>
             </div>
               <div class="row-fluid">
                <div class="span3">
                  <%= f.collection_radio_buttons(:option_no, [['3', 'upload resume']],:first, :last,:item_wrapper_tag=>'label',:item_wrapper_class=>'bigSize', :wrapper_html => { :id => 'jo' } ) do |b|
                    b.label {
                       b.radio_button + " " + b.text
                    }
                  end
                  %>
                </div>
                <div class="span9 bigSize">
                  <%= f.input :file_name, :as => :file,:label=>false %>
                </div>
              </div>
              <div class="gap1">
                Your resume will automatically populate fields found on the next page.
              </div>
              <div class="gap1">
                We will automatically populate the fields on the next page with content from your resume( in PDF,DOC,DOCX,RTF or TXT format.)
              </div>
              <%= f.collection_radio_buttons(:option_no, [['4', 'cut and paste your resume']],:first, :last,:item_wrapper_tag=>'label',:item_wrapper_class=>'bigSize', :checked=> '1' ) do |b|
                b.label {
                  b.radio_button + " " + b.text
                }
              end
              %>
              <div class="gap1">
              <%= f.input :data,:as => :text,:label=>false,:input_html => { :cols => "1", :rows => "15"}  %>
              </div>
              <%= f.button :submit, 'Next',:class=> "btn btn-primary pull-right" %>
        <% end %>
  </div>
  <div class="span3">
    <div class="dashboard-photo">
      <ul class="thumbnails">
        <li class="span12">
          <div class="thumbnail">
            <% if  @person.nil? %>
             <img src="http://placehold.it/200x160" alt="">
            <%else %>
             <%= image_tag (@person.photo.to_s) %>
               <h4><%= current_user.first_name %></h4>
            <% end %>

          </div>
        </li>
      </ul>
    </div>
   </div>
</div>