<div class="row-fluid">
  <div class="span9">
<h3>Language Skills</h3>
<%= simple_form_for(@language) do |f| %>
  <%= f.error_notification %>
    <%= f.input :language_name %>
    <%= f.input :language_proficiency %>
    <%= f.button :submit, 'Add Language',:class=> "btn btn-primary" %>
<% end %>
  </div>
  <div class="span3">

    <div class="dashboard-photo">
      <ul class="thumbnails">
        <li class="span12">
          <div class="thumbnail">
            <% if  @person.nil? %>
            <%else %>
                <%= image_tag (@person.photo.to_s) %>
            <% end %>
            <h4><%= current_user.first_name %></h4>

          </div>
        </li>
      </ul>
    </div>

  </div>
</div>