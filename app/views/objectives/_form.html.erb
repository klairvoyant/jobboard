<div class="row-fluid">
  <div class="span9">

  <h3>Career Objectives</h3>
<%= simple_form_for(@objective) do |f| %>
  <%= f.error_notification %>
    <%= f.input :objective, :input_html => { :rows => 5 } %>
    <%= f.association :interest_area  %>
    <%= f.association :job_type  %>
    <%= f.association :salary_range  %>
    <%= f.button :submit, 'Next',:class=> "btn btn-primary pull-right" %>
  <!--</div>-->
<% end %>

  </div>
  <div class="span3">

    <div class="dashboard-photo">
      <ul class="thumbnails">
        <li class="span12">
          <div class="thumbnail">
            <% if  @person.nil? %>
                <img src="http://placehold.it/200x180" alt="">
            <%else %>
                <%= image_tag (@person.photo.to_s) %>
                <h4><%= current_user.first_name %></h4>
            <% end %>


          </div>
        </li>
      </ul>
    </div>

  </div>
</div>